    <div class="container">
        <form class="form-signin text-right border p-3 mx-auto mt-5" style="max-width: 800px;" action="/auth/register"
            method="post">

            <h1 class="h3 mb-3 font-weight-normal border-bottom pb-2 bg-light">عضویت در سایت</h1>
            <% if(messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach( err => { %>
                    <%- err %> <br>
                <% }) %>
            </div>
            <% } %>
            <div class="my-3">
                <label for="inputEmail">نام کامل</label>
                <input type="text" id="inputFullName" class="form-control" name="name">
            </div>
            <div class="my-3">
                <label for="inputEmail">آدرس ایمیل</label>
                <input type="email" id="inputEmail" class="form-control" name="email">
            </div>
            <div class="my-3">
                <label for="inputPassword">پسوورد</label>
                <input type="password" id="inputPassword" class="form-control" name="password">
            </div>
            <!-- <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div> -->
            <div class="mt-4">
                <button class="btn btn-lg btn-primary btn-block" type="submit">عضویت</button>
            </div>

        </form>
    </div>